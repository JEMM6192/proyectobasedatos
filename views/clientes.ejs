                </div>
            </div>
        </header>


        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center ">
          

        <div class="table-responsive">
        <table class="table table-hover table-bordered" id="tablaclientes">
            <thead>
                <tr class="text-center align-middle">
                  <th scope="col">#</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">RTN</th>
                  <th class="text-center" scope="col">Telefono</th>
                  <th class="text-center" scope="col">Direccion</th>
                  <th class="text-center" scope="col">Fecha</th>
                  <th scope="col">Acciones</th>
                </tr>
            </thead>
           
            <tbody>


        <% let i=1 %>
        <% clientes.forEach((clientes)=>{ %>
          
     <tr class="text-center align-middle">

      <td> <%= i++ %></td>
      <td ><%= clientes.Nombre%> </td>
       <td><%= clientes.RTN%> </td>
       <td><%= clientes.Telefono%> </td>
       <td ><%= clientes.Direccion%> </td>
    
       <td> <%= clientes.fecha.toLocaleDateString() %> </td>
       <td>
        <button type="button" class="btn btn-primary editar"  class="btn btn-danger" name="editar" data-id="<%= clientes.id %>" >Editar</button>
         <a href="/eliminarcliente/<%= clientes.id %>" class="btn btn-danger">Eliminar</a>
        
    
    </td>
    </tr>
    <% }) %>

            </tbody>
           
        </table>
