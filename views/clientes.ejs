<script>
  $(document).ready(function() {
    $(".editar").click(function() { //
      var id = $(this).data("id");
      $.ajax({
        url: "/editarcliente/" + id,
        method: "GET",
        //recibit las 2 variables
        success: function(respuesta) { //respuesta es el json que enviamos desde el controlador
          $("#titulo").val("Editar cliente"); 
          $("#nombre").val(respuesta.Nombre);
          $("#rtn").val(respuesta.RTN);
          $("#telefono").val(respuesta.Telefono);
          $("#direccion").val(respuesta.Direccion);
          $("#fecha").val(respuesta.fecha);
          $("form").attr("action", "/actualizarcliente/" + respuesta.id);
          $("#titulo").text("Actualizar clientes");
          $("#exampleModal").modal("show");
        }
      });
    });
  });
  </script>
  
  <script>
    $('#exampleModal').on('hidden.bs.modal', function () {
      $(this).find('form')[0].reset(); 
      $("#titulo").text("Agregar Clientes");
