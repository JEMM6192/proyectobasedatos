        <header class="site-header d-flex flex-column justify-content-center align-items-center">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 col-12 text-center">

                        <h2 class="mb-0">Empleados</h2>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="button" id="agregar"class="btn btn-outline-light agregar" data-bs-toggle="modal"
                    data-bs-target="#modalempleados" >Agregar</button>\

                   
                </div>
                </div>
            </div>
        </header>


        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center ">
          

        <div class="table-responsive">
          <table class="table table-hover table-bordered" id="tablaempleados">
            <thead>
                <tr class="text-center align-middle">
                  <th hidden>idcliente</th> 
                  <th scope="col">#</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Apeliido</th>
                  <th class="text-center" scope="col">DNI</th>
                  <th class="text-center" scope="col">Telefono</th>
                  <th class="text-center" scope="col">Direccion</th>
                  <th class="text-center" scope="col">Fecha de nacimiento</th>
                  <th scope="col">Acciones</th>
                </tr>
            </thead>
           
            <tbody>
             
       <% let i=1 %>
     <% empleados.forEach((empleados)=>{ %>
     <tr class="text-center align-middle">
      <td hidden></td> 
      <td><%= i++ %></td>
   
      <td><%= empleados.Nombre  %></td>
      <td><%= empleados.Apellido %></td>
      <td><%= empleados.DNI %></td>
      <td><%= empleados.Telefono %></td>
      <td><%= empleados.Direccion %></td>
      <td><%= empleados.fecha_nacimiento.toLocaleDateString() %></td>
      <td>
        <button type="button" class="btn btn-primary editar"  class="btn btn-danger" name="editar" data-id="<%=  empleados.id_empleado %>" >Editar</button>
         <a href="/eliminarEmpleado/<%= empleados.id_empleado%>" class="btn btn-danger">Eliminar</a>
      </td>
       <% }) %>
    
            </tbody>
        </table>
    </div>
</div>
</div>





<div class="modal fade" id="modalempleados" tabindex="-1" aria-labelledby="exampleModalLabel" data-bs-backdrop="static"  aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content mx-auto">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="titulo" name="titulo">Agregar Empleados</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insertarEmpleado" method="post" >
        <div class="row">
          <div class="mb-3 col-12">
            <label for="nombre" class="form-label">Nombre: </label>
            <input type="text" class="form-control" id="nombre" name="nombre" required>
          </div>
          <div class="mb-3 col-12">
            <label for="apellido" class="form-label">Apellido: </label>
            <input type="text" class="form-control" id="apellido" name="apellido" required>
          </div>
          <div class="mb-3 col-12">
            <label for="dni" class="form-label">DNI: </label>
            <input type="int" class="form-control" id="dni" name="dni" required>
          </div>
          <div class="mb-3 col-12">
            <label for="telefono" class="form-label">Teléfono: </label>
            <input type="int" class="form-control" id="telefono" name="telefono" required>
          </div>
          <div class="mb-3 col-12">
            <label for="direccion" class="form-label">Dirección: </label>
            <input type="text" class="form-control" id="direccion" name="direccion" required>
          </div>
          <div class="mb-3 col-12">
            <label for="fecha" class="form-label">Fecha de Nacimiento:</label>
            <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" required>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
    </div>
  </div>
</div>



       
    </main>


    <footer>
       
    </footer>


    <!-- JAVASCRIPT FILES -->
    <script src="js/jquery.min.js"></script>
