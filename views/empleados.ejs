    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.3/datatables.js"></script>
    <script>
        $(document).ready(function() {
          $('#tablaempleados').DataTable( {
              language: {
                  url: 'http://cdn.datatables.net/plug-ins/1.13.3/i18n/es-ES.json'
              }
          } );
        } );
        </script>

<script>
 $(document).ready(function() {
  $('.editar').click(function() {
    var id = $(this).data('id'); // Se obtiene el ID del botón "editar"
    $.ajax({
        url: "/editarEmpleado/" + id,
        method: "GET",
      success: function(data) {
  
      $('#nombre').val(data.Nombre);
      $('#apellido').val(data.Apellido);
      $('#dni').val(data.DNI);
      $('#telefono').val(data.Telefono);
      $('#direccion').val(data.Direccion);
      $('#fecha_nacimiento').val(data.fecha_nacimiento);
      $("form").attr("action", "/actualizarEmpleado/" + id); 
      $('#titulo').text("Editar Empleados");
      $('#modalempleados').modal('show'); 
      //mostrar modal
    }
  });
  });
});
</script>
  
 
<script>
  $('#modalempleados').on('hidden.bs.modal', function () {
    $(this).find('form')[0].reset(); 
    $("#titulo").text("Agregar Empleados");
    $("form").attr("action", "/insertarEmpleado");
  });
</script>

