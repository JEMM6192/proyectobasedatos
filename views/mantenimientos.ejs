        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center ">
          
                

          
            


        <div class="table-responsive">
        <table class="table table-hover table-bordered" id="tablaclientes">
            <thead>
                <tr class="text-center align-middle">
                    <th>#</th> 
                  <th>cliente</th> 
                  <th>Empleado asignado</th>
                  <th>Vehiculo</th>
                  <th scope="col">Tipo de Mantenimiento</th>
                  <th scope="col">Descripcion de Servicio</th>
                  <th scope="col">Fecha de ingreso</th>
                  <th scope="col">Fecha de Salida</th>
                  <th scope="col">Estado</th>
                  <th class="text-center" scope="col">Proximo Mantenimiento</th>
                  <th class="text-center" scope="col">Cambio de Repuesto</th>
                  <th scope="col">Foto</th>
                  <th scope="col">Acciones</th>
                </tr>
            </thead>
           
            <tbody>
                <% let i=1 %>
          
                <% mantenimientos.forEach(mantenimiento => { %>
                <tr class="text-center align-middle">
                  <td><%= i++ %></td>
                  <td><%= mantenimiento.id_cliente %></td>
                  <td><%= mantenimiento.id_Empleado %></td>
                  <td><%= mantenimiento.id_Vehiculo %></td>
                  <td><%= mantenimiento.Tipo_Mantenimiento %></td>
                  <td><%= mantenimiento.Descripcion_Servicio %></td>
                  <td><%= mantenimiento.Fecha_Ingreso %></td>
                  <td><%= mantenimiento.Fecha_Salida %></td>
                  <td><%= mantenimiento.Estado %></td>
                  <td><%= mantenimiento.Proximo_Mantenimiento %></td>
                  <td><%= mantenimiento.Cambio_Repuesto %></td>
                  <td><img src="<%= mantenimiento.FotoRuta%>" alt="" width="100px" height="100px"></td>
                  <td>
                    <button type="button" class="btn btn-primary editar"  class="btn btn-danger" name="editar" data-id="<%= mantenimiento.id_Registro%>" >Editar</button>
                     <a href="/eliminarMantenimiento/<%= mantenimiento.id_Registro%>" class="btn btn-danger">Eliminar</a>
                  </td>
                </tr>
                <% }) %>

     
            </tbody>
        </table>
    </div>
    </div>

    
<section class="trending-podcast-section section-padding">
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Proximos Mantenimientos</h4>
                </div>
            </div>
            <% proximomantenimiento.forEach(proximomantenimiento => { %>
            <div class="col-lg-4 col-12 mb-4 mb-lg-0">
                <div class="custom-block custom-block-full">
                    <div class="custom-block-image-wrap">
                        <a href="detail-page.html">
                            <img src="<%= proximomantenimiento.FotoRuta %>" class="custom-block-image img-fluid" alt="">
                        </a>
                    </div>
                    <div class="custom-block-info">
                        <h5 class="mb-2 text-center">
                            <a href="detail-page.html">
                                <%= proximomantenimiento.Marca %>
                            </a>
                        </h5>
