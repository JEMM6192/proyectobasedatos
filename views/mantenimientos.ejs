            <% }) %>    
        </div>
    </div>
</section>



<div class="modal fade" id="modalmantenimientos" tabindex="-1" role="dialog" aria-labelledby="modalAgregarMantenimientoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="titulo">Agregar Mantenimiento</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form name="mantenimientoForm" action="/insertarMantenimiento" method="post" enctype="multipart/form-data" >
          <div class="modal-body">
            <div class="row">
              <!-- Columna 1 -->
              <div class="col-md-6">
                <div class="form-group">
                  <label for="id_cliente">ID Cliente</label>
                  <input type="text" class="form-control" id="id_cliente" name="id_cliente">
                </div>
                <div class="form-group">
                  <label for="id_vehiculo">ID Vehículo</label>
                  <input type="text" class="form-control" id="id_vehiculo" name="id_vehiculo">
                </div>
                <div class="form-group">
                  <label for="tipo_mantenimiento">Tipo de Mantenimiento</label>
                  <input type="text" class="form-control" id="tipo_mantenimiento" name="tipo_mantenimiento">
                </div>

                <div class="form-group">
                    <label for="descripcion_servicio">Descripción del Servicio</label>
                    <textarea class="form-control" id="descripcion_servicio" name="descripcion_servicio" rows="3"></textarea>
                  </div>

                  <div class="form-group">
                    <label for="proximo_mantenimiento">Próximo Mantenimiento</label>
                    <input type="date" class="form-control" id="proximo_mantenimiento" name="proximo_mantenimiento">
                  </div>
              </div>
              <!-- Columna 2 -->
              
              <div class="col-md-6">
                <div class="form-group">
                  <label for="id_empleado">Empleado: </label>
                  <select class="form-control" id="id_empleado" name="id_empleado">
                    <% empleados.forEach(empleado => { %>
                  <option value="<%=empleado.id_empleado %>"><%=empleado.id_empleado %></option>
                  <% }) %>
                </select>
                </div>
              

                <div class="form-group">
                  <label for="fecha_ingreso">Fecha de Ingreso</label>
                  <input type="date" class="form-control" id="fecha_ingreso" name="fecha_ingreso">
                </div>
                <div class="form-group">
                  <label for="fecha_salida">Fecha de Salida</label>
                  <input type="date" class="form-control" id="fecha_salida"  name="fecha_salida">
                </div>

                
                    <div class="form-group">
                      <label class="form-label">Estado</label>
                      <select class="form-select" id="estado" name="estado">
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completado">Completado</option>
                       
                      </select>
                   

              </div>
              <div class="form-group">
                <label for="cambio_repuesto">Cambio de Repuesto</label>
                <input type="date"  class="form-control" id="cambio_repuesto" name="cambio_repuesto">
              </div>
              <div class="form-group">
                <label for="foto">Foto</label>
                <input type="file" class="form-control-file" id="foto"  name="foto" accept=".jpg">
              </div>
            </div>
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>
        </div>
      </div>
    </div>
    
    






