<script>
 $(document).ready(function() {
  $('.editar').click(function() {
    var id = $(this).data('id'); // Se obtiene el ID del botón "editar"
    $.ajax({
        url: "/editarvehiculo/" + id,
        method: "GET",
      success: function(data) {
        $("#id_cliente").val(data.id_cliente);
        $("#marca").val(data.Marca);
        $("#modelo").val(data.Modelo);
        $("#anio").val(data.Anio);
        $("#tipo_vehiculo").val(data.Tipo_Vehiculo);
        $("#color").val(data.Color);
        $("#placa").val(data.Placa);
        $("#motor").val(data.Motor);
        $("#titulo").text("Editar vehículo");
        $("form").attr("action", "/actualizarvehiculo/" + id);
        $('#modalvehiculo').modal('show');
      //mostrar modal
    }
  });
  });
});
</script>
  
 
<script>
  $('#modalvehiculo').on('hidden.bs.modal', function () {
    $(this).find('form')[0].reset(); 
    $("#titulo").text("Agregar vehículo");
    $("form").attr("action", "/insertarvehiculo");
  });
</script>
<script src="https://cdn.jsdelivr.net/npm/spectrum-colorpicker2/dist/spectrum.min.js"></script>
